{
    "workbench.colorTheme": "One Dark Pro Mix",
    "editor.mouseWheelScrollSensitivity": 0.2,
    "workbench.mouseWheelScrollSensitivity": 0.2,
    "workbench.list.mouseWheelScrollSensitivity": 0.2,
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#4f5353",
        // "editor.lineHighlightBorder": "#9292ac"
    },
    "cmake.configureOnOpen": true,
    "cmake.generator": "Ninja",
    "cmake.debugConfig": {
        "args": [
            "--gtest_filter=*"
        ]
    },
    "workbench.tree.indent": 12,
    // "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.buildDirectory": "${workspaceFolder}/buildSrc",
    "cmake.copyCompileCommands": "${workspaceFolder}/compile_commands.json",
    "cmake.configureArgs": [
        // For clangd
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=1",
        // For navigation test targets
        "-DHERE_BUILD_TEST=1",
        "-DHERE_BUILD_TESTS=1",

        // You might need them for gemini, but somehow it also compiles with out these options.
        // "-DCMAKE_BUILD_TYPE=Debug",
        // "-DCMAKE_CXX_FLAGS=-D_LIBCPP_ENABLE_CXX17_REMOVED_UNARY_BINARY_FUNCTION",
        // "-DBUILD_SHARED_LIBS=ON",
        // "-DICU_BUILD=ALWAYS"
    ],
    "output.smartScroll.enabled": false,
    "editor.minimap.maxColumn": 80,
    "explorer.autoReveal": false,
    // "clang-tidy.checks": [
    //     "-readability-identifier-length",
    //     "-abseil-*",
    //     "-altera-*",
    //     "-android-*",
    //     "-cert-*",
    //     "-fuchsia-*",
    //     "-bugprone-easily-swappable-parameters",
    //     "-modernize-use-trailing-return-type",
    //     "-readability-named-parameter",
    //     "-cppcoreguidelines-init-variables",
    //     "-cppcoreguidelines-non-private-member-variables-in-classes",
    //     "-misc-non-private-member-variables-in-classes",
    //     "-bugprone-unchecked-optional-access"
    // ],
    "editor.renderWhitespace": "all",
    "editor.minimap.enabled": false,
    "editor.tokenColorCustomizations": {
        "[One Dark Pro Mix]": {
            "textMateRules": [
                {
                    "scope": "variable.other.local.cpp",
                    "settings": {
                        "foreground": "#d6cccc",
                    }
                },
                {
                    "scope": "variable.parameter.cpp",
                    "settings": {
                        "foreground": "#cb690e",
                    }
                }
            ]
        }
    },
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.fontSize": 14,
    "editor.stickyScroll.enabled": false,
    "terminal.integrated.lineHeight": 1.3,
    "terminal.integrated.letterSpacing": 1,
    "workbench.editor.wrapTabs": true,
    "workbench.colorCustomizations": {
        "tab.border": "#fff6",
        "titleBar.border": "#fff6",
        "editorGroupHeader.tabsBorder": "#647c64",
    },
    // "[cpp]": {
    //     "editor.defaultFormatter": "xaver.clang-format"
    // },
    "files.associations": {
        "*.lime": "swift"
    },
    "git.openRepositoryInParentFolders": "always",
    "window.zoomLevel": 0.01,
    "cmake.options.statusBarVisibility": "visible",
    "cmake.showOptionsMovedNotification": false,
    "[log][Log]": {
        "editor.fontSize": 13,
    },
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "window.density.editorTabHeight": "compact"
    // "git.mergeEditor": true,
}
