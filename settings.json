{
    "workbench.colorTheme": "One Dark Pro Mix",
    "editor.mouseWheelScrollSensitivity": 0.2,
    "workbench.mouseWheelScrollSensitivity": 0.2,
    "workbench.list.mouseWheelScrollSensitivity": 0.2,
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#4f5353",
        // "editor.lineHighlightBorder": "#9292ac"
    },
    "editor.renderWhitespace": "all",
    "cmake.configureOnOpen": true,
    "cmake.generator": "Ninja",
    "cmake.debugConfig": {
        "args": [
            // "--gtest_filter="
        ]
    },
    "workbench.tree.indent": 12,
    "cmake.buildDirectory": "${workspaceFolder}/build",
    // "cmake.buildDirectory": "${workspaceFolder}/buildSrc",
    "cmake.configureArgs": [
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=1"
        // "-DCMAKE_BUILD_TYPE=Debug",
        // "-DCMAKE_CXX_FLAGS=-D_LIBCPP_ENABLE_CXX17_REMOVED_UNARY_BINARY_FUNCTION",
        // "-DBUILD_SHARED_LIBS=ON",
        // "-DICU_BUILD=ALWAYS"
    ],
    "output.smartScroll.enabled": false,
    "editor.minimap.maxColumn": 80,
    "explorer.autoReveal": false,
    "clang-tidy.checks": [
        "-readability-identifier-length",
        "-abseil-*",
        "-altera-*",
        "-android-*",
        "-cert-*",
        "-fuchsia-*",
        "-bugprone-easily-swappable-parameters",
        "-modernize-use-trailing-return-type",
        "-readability-named-parameter",
        "-cppcoreguidelines-init-variables",
        "-cppcoreguidelines-non-private-member-variables-in-classes",
        "-misc-non-private-member-variables-in-classes",
        "-bugprone-unchecked-optional-access"
    ],
    "editor.minimap.enabled": false,
    "editor.tokenColorCustomizations": {
        "[One Dark Pro Mix]": {
            "textMateRules": [
                {
                    "scope": "variable.other.local.cpp",
                    "settings": {
                        "foreground": "#d6cccc",
                    }
                },
                {
                    "scope": "variable.parameter.cpp",
                    "settings": {
                        "foreground": "#cb690e",
                    }
                }
            ]
        }
    },
    "terminal.integrated.lineHeight": 1.3,
    "terminal.integrated.letterSpacing": 1,
    "workbench.editor.wrapTabs": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "workbench.colorCustomizations": {
        "tab.border": "#fff6",
        "titleBar.border": "#fff6",
        "editorGroupHeader.tabsBorder": "#647c64",
    },
    // "[cpp]": {
    //     "editor.defaultFormatter": "xaver.clang-format"
    // },
    "editor.fontSize": 13.5,
    "files.associations": {
        "*.lime": "swift"
    },
    "git.openRepositoryInParentFolders": "always",
    "window.zoomLevel": 0.01,
    "cmake.options.statusBarVisibility": "visible",
    "editor.stickyScroll.enabled": false,
    // "C_Cpp.intelliSenseEngine": "disabled",
    // "git.mergeEditor": true,
    // "git.suggestSmartCommit": false,
    // "editor.formatOnSave": true
}
